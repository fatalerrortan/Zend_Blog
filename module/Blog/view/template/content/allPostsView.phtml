<script>
    $(document).ready(function(){
        $('#forward').click(function (){
            var pageIndex = parseInt($('#pageIndex').val());
    //set New Pageindex for hidden input
            var newPageIndex = parseInt(pageIndex + 1);
            $.ajax({
                type:"GET",
                url:'http://www.xulin-tan.de/blog/public/post/ajax?page='+newPageIndex,
                dataType:"text",
                contentType:false,
                cache:false,
                processData:false,
//                data:{ page: pageIndex},
                success:function(responseText){
                    if(responseText == ''){
                        $('#allPosts').html('<h1>No More For A While :)</h1>');
                        $('#pageIndex').val(newPageIndex);
                        return false;
                    }else {
                        $('#allPosts').html(responseText);
                        $('#pageIndex').val(newPageIndex);
                    }
                }
            });
        });
        $('#backward').click(function (){
            var pageIndex = parseInt($('#pageIndex').val());
            if(pageIndex == 0){return false;}
            else {
                var newPageIndex = pageIndex - 1;
                $('#pageIndex').val(newPageIndex);
            }
            $.ajax({
                type:"GET",
                url:'http://www.xulin-tan.de/blog/public/post/ajax?page='+newPageIndex,
                dataType:"text",
                contentType:false,
                cache:false,
                processData:false,
//                data:{ page: pageIndex},
                success:function(responseText){
                    $('#allPosts').html(responseText);
                }
            });
        });
    });
</script>
