<input type="hidden" id="pageIndex" value="0" />
<ul id="allPosts">
    <?php echo $this->allposts; ?>
</ul>
<script>
    $(document).ready(function(){
        var pageIndex = $('#pageIndex').val();
        $('#forward').click(function (){
            $.ajax({
                type:"GET",
                url:'http://www.xulin-tan.de/blog/public/post/ajax',
                dataType:"text",
                contentType:false,
                cache:false,
                processData:false,
                data:{ page: pageIndex},
                success:function(responseText){
                    $('#allPosts').html(responseText);
                    $('#pageIndex').val(pageIndex + 11);
                }
            });
        });
    });
</script>